    <!-- Base application theme. -->
    <style name="Theme.Rucky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:colorForeground">@color/grey_2</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_0</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">?attr/appColorAccentDark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/appColorAccentDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="cardViewStyle">@style/Card</item>
        <item name="materialCardViewStyle">@style/Card</item>
        <item name="colorAccent">?attr/appColorAccent</item>
        <item name="preferenceTheme">@style/SettingsIcon</item>
        <item name="dialogTheme">@style/Popup</item>
        <item name="alertDialogStyle">@style/Popup</item>
        <item name="alertDialogTheme">@style/Popup</item>
        <item name="dialogPreferenceStyle">@style/Popup</item>
        <item name="colorControlHighlight">?attr/appColorAccentLight</item>
    </style>

    <style name="Popup" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorControlActivated">?attr/appColorAccent</item>
        <item name="colorControlNormal">?attr/appColorAccent</item>
        <item name="colorControlHighlight">?attr/appColorAccentLight</item>
        <item name="buttonBarButtonStyle">@style/Alert.Button</item>
        <item name="android:windowBackground">@drawable/alert</item>
        <item name="android:shadowColor">@null</item>
        <item name="android:shadowDx">@null</item>
        <item name="android:shadowDy">@null</item>
        <item name="android:ambientShadowAlpha">@null</item>
        <item name="android:outlineAmbientShadowColor">@null</item>
        <item name="android:outlineSpotShadowColor">@null</item>
        <item name="android:spotShadowAlpha">@null</item>
        <item name="android:windowMinWidthMajor">70%p</item>
        <item name="android:windowMinWidthMinor">70%p</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Alert.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">?attr/appColorAccent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <style name="InitButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">?attr/appColorAccent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">0sp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">?attr/appColorAccent</item>
        <item name="android:background">@color/transparent</item>
        <item name="iconTint">?attr/appColorAccent</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <style name="SettingsIcon" parent="PreferenceThemeOverlay">
        <item name="android:tint">?attr/appColorAccent</item>
    </style>

    <style name="PreferenceFragment.Material">
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="colorControlHighlight">?attr/appColorAccentLight</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">?attr/appColorAccent</item>
    </style>

    <style name="IconTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="iconTint">?attr/appColorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

