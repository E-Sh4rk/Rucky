<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="oval" >
            <solid android:color="?attr/appColorAccent"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="oval" >
            <gradient
                android:type="linear"
                android:gradientRadius="50%p"
                android:centerColor="@color/black"
                android:startColor="@color/transparent"
                android:endColor="@color/transparent"
                android:angle="180"
                android:dither="true"
                android:antialias="true"
                android:useLevel="true" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="oval" >
            <gradient
                android:type="linear"
                android:gradientRadius="50%p"
                android:centerColor="@color/black"
                android:startColor="@color/transparent"
                android:endColor="@color/transparent"
                android:angle="90"
                android:dither="true"
                android:antialias="true"
                android:useLevel="true" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item
        android:top="2.5dp"
        android:left="2.5dp"
        android:right="2.5dp"
        android:bottom="2.5dp">
        <shape android:shape="oval" >
            <solid android:color="@color/black"/>
            <size
                android:width="120dp"
                android:height="120dp"/>
        </shape>
    </item>
</layer-list>